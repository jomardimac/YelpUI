<Window x:Class="Milestone3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone3"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="userButton" Content="User" Height="25" MinWidth="50" Click="userButtonClicked"/>
            <Button x:Name="businessButton" Content="Business" Height="25" MinWidth="50" Click="businessButtonClicked"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,25,0,0"/>
    </Grid>
</Window>
